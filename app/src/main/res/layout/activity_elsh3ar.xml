<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.shafy.wannatofly.home">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->


    <ImageView
        android:id="@+id/tr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:src="@drawable/logf"
        android:layout_marginTop="-180dp"
        android:layout_marginLeft="-280dp" />

    <ImageView
        android:id="@+id/moving3"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:src="@drawable/cloudc"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="-280dp" />

    <ImageView
        android:id="@+id/br"
        android:layout_gravity="bottom|start"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/logobb"
        android:layout_marginBottom="-100dp"
        android:layout_marginLeft="-120dp" />



    <ImageView
        android:id="@+id/moving2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/cloud"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="-200dp" />

    <ImageView
        android:id="@+id/moving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cloud"
        android:layout_gravity="bottom|start"
        android:layout_marginLeft="-380dp"/>

    <ImageView
        android:id="@+id/bl"
        android:layout_gravity="right"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:src="@drawable/logorr"
        android:layout_marginTop="180dp"
        android:layout_marginRight="-300dp"/>






        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/sh3ar"
                android:layout_gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/play"
                    android:layout_toLeftOf="@+id/puase"
                    android:layout_marginTop="15dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="p"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:background="@drawable/btnr"
                    android:layout_marginLeft="10dp"
                    android:onClick="play"/>
                <Button
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:id="@+id/puase"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="II"
                    android:textSize="30sp"
                    android:background="@drawable/btnr"
                    android:layout_marginLeft="10dp"
                    android:onClick="pause"/>
                <Button
                    android:id="@+id/stop"
                    android:layout_toRightOf="@+id/puase"
                    android:layout_marginTop="15dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="s"
                    android:textSize="30sp"
                    android:background="@drawable/btnr"
                    android:layout_marginLeft="10dp"
                    android:onClick="stop"/>

                <TextView
                    android:id="@+id/st"
                    android:layout_below="@id/puase"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ارفع عينك بص لفوق"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    />
                <TextView
                    android:id="@+id/nd"
                    android:layout_below="@id/st"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="هدفك اللي عشانه مخلوق"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    />
                <TextView
                    android:id="@+id/rd"
                    android:layout_below="@id/nd"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="انسي الارض و كل ما فيها"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    />
                <TextView
                    android:id="@+id/th"
                    android:layout_below="@id/rd"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="حلق عالي و ارمي الطوق"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    />
                <TextView
                    android:id="@+id/st2"
                    android:layout_below="@id/th"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="زي الطير بيطير اسراب"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    />
                <TextView
                    android:id="@+id/nd2"
                    android:layout_below="@id/st2"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="طير في السما و معاك اصحاب"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    />
                <TextView
                    android:id="@+id/rd2"
                    android:layout_below="@id/nd2"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="و من الطائر ناخد عبره"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    />
                <TextView
                    android:id="@+id/th2"
                    android:layout_below="@id/rd2"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ازاي نهزم اي صعاب"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    />
                <TextView
                    android:id="@+id/st3"
                    android:layout_below="@id/th2"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اعلي و علي كل طموحك"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    />
                <TextView
                    android:id="@+id/nd3"
                    android:layout_below="@id/st3"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="افرش ريشك وسط جروحك"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    />
                <TextView
                    android:id="@+id/rd3"
                    android:layout_below="@id/nd3"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اعلي بفكرك وسط الدنيا"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    />
                <TextView
                    android:id="@+id/th3"
                    android:layout_below="@id/rd3"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="و وسط تحدي افرض صوتك"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    />

                <TextView
                    android:id="@+id/st4"
                    android:layout_below="@id/th3"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="علي و اشبع طير فى سماه"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    />
                <TextView
                    android:id="@+id/nd4"
                    android:layout_below="@id/st4"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شد صحابك فوق لله"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    />
                <TextView
                    android:id="@+id/rd4"
                    android:layout_below="@id/nd4"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ويا اصحابك خلي الرحلة"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    />
                <TextView
                    android:id="@+id/th4"
                    android:layout_below="@id/rd4"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تبقي احلي و انتو معاه"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    android:layout_marginBottom="15dp"
                    />

            </RelativeLayout>
        </ScrollView>



    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/dummy_button"
                android:background="#00ffffff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dummy_button"
                android:textColor="#00ffffff"/>

        </LinearLayout>
    </FrameLayout>



</FrameLayout>
